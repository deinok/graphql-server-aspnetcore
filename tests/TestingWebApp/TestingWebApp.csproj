		<TargetFrameworks>netcoreapp1.0;netcoreapp2.0</TargetFrameworks>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="GraphQL.StarWars" Version="1.0.0" />
	</ItemGroup>

