	</ItemGroup>
	
	<ItemGroup Condition="$(TargetFramework) == 'netcoreapp2.0'">
		<PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.3" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\src\GraphQL.Server.AspNetCore.GraphiQL\GraphQL.Server.AspNetCore.GraphiQL.csproj" />
		<ProjectReference Include="..\..\src\GraphQL.Server.AspNetCore.Playground\GraphQL.Server.AspNetCore.Playground.csproj" />
